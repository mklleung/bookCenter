extends layoutBS

block content
  body.bc
  h1.leftBorder List of All Books
  table.table.table-bordered.table-striped.leftBorder
    tbody
      tr
        td.underline
          | Quantity
        td.underline
          | Book Name
        td.underline
          | Courses
        td.underline
          | Cover Type
        td.underline
          | Condition
        td.underline
          | Lowest Price
        td.underline
          | Seller
      each addBook in addBooks
        //- let url = item.url
        tr
          td
            |#{addBook.quantity}
          td
            |#{addBook.bookName}
          td
            |#{addBook.courses}
          td
            |#{addBook.coverType}
          td
            |#{addBook.condition}
          td
            |#{addBook.lowestPrice}
          td
            |#{addBook.seller}
  
